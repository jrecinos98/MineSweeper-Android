<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    android:paddingBottom="50dp"
    >

    <SeekBar
        android:id="@+id/mySeekBar"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:max="100"
        android:progress="50" />

    <GridView
        android:id="@+id/mySizeGrid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:numColumns="3" />

    <Button
        android:id="@+id/customStartButton"
        android:background="@drawable/round_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="Play Game!" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:max="2"
        android:progress="0"
        android:thumb="@drawable/toolbar_mine" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/customStartButton"
        android:layout_centerHorizontal="true"
        android:text="Medium"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/customStartButton"
        android:layout_alignStart="@+id/seekBar2"
        android:text="Easy"
        android:visibility="visible"
        android:layout_alignLeft="@+id/seekBar2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/customStartButton"
        android:layout_alignEnd="@+id/seekBar2"
        android:text="Hard"
        android:layout_alignRight="@+id/seekBar2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:text="Select Grid Size &amp; Difficulty"
        android:textSize="24sp"
        android:visibility="visible" />

</RelativeLayout>